<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.DashboardController">
    <children>
        <VBox spacing="15" alignment="CENTER" layoutX="100" layoutY="50">
            <Label text="Welcome to LMS Dashboard" style="-fx-font-size: 20px;" />
            <Button text="View Available Books" />
            <Button text="Borrow Book" />
            <Button text="View My Borrowed Books" />
            <Button text="Logout" onAction="#handleLogout" />
            <Button text="Return Book" onAction="#handleReturnBook" />
            <Button text="View Fines" onAction="#handleViewFines" />
            <Label fx:id="welcomeLabel" style="-fx-font-size: 16px; -fx-text-fill: darkblue;" />

        </VBox>
    </children>
</AnchorPane>
